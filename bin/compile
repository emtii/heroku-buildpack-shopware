#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -o errexit    # always exit on error
set -o pipefail   # don't ignore exit codes when piping output

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)
SHOPWARE_VERSION=$(cat $BUILD_DIR/shopware.version | xargs)

cd $BUILD_DIR
mkdir shopware
cd shopware

source $BP_DIR/lib/output.sh
source $BP_DIR/lib/shopware.sh

# Start
header "Fetching shopware"

wget $(get_shopware_url $SHOPWARE_VERSION) -O shopware.zip
unzip shopware.zip

info "deleting shopware.zip"
rm shopware.zip

info "get known folder name"
mv * shopware-git

info "move shopware files"
# enable move for dotfiles
shopt -s dotglob
mv shopware-git/* .
shopt -u dotglob

rm -rf shopware-git





header "Fetching dependencies"
npm i -g grunt



header "Installing shopware"
info "setting file permissions"
chmod -R 755 var
chmod -R 755 web
chmod -R 755 files
chmod -R 755 media
chmod -R 755 engine/Shopware/Plugins/Community

header "Shopware console test"
bin/console
